<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">

  <!-- Give product a unique ID per platform -->
  <?if $(var.Platform)=x64 ?>
  <?define ProductCode = "{DE3B1CBB-BF7B-46BA-BCBB-4B1542C9B3BB}" ?>
  <?else?>
  <?define ProductCode = "{B6C0672A-D365-4D2B-B6A1-42E908D181E0}" ?>
  <?endif?>

  <!-- Fixed upgrade Id -->
  <?define UpgradeCode = "{8C197FE6-57DF-41FD-A0CD-84B5D3B97BDC}" ?>

	<Product Id="$(var.ProductCode)" Name="!(loc.ProductName_$(var.Platform))" Language="!(loc.Language)" Version="$(var.BuildVersion)" Manufacturer="!(loc.Company)" UpgradeCode="$(var.UpgradeCode)">
		<Package InstallerVersion="200" Compressed="yes" InstallScope="perMachine" Platform="$(var.Platform)" Manufacturer="!(loc.Company)" Description="!(loc.Description)" Keywords="!(loc.Keywords)" Comments="!(loc.Comments)" Languages="!(loc.Language)"/>

		<MajorUpgrade DowngradeErrorMessage="A newer version of Mobee is already installed." />
		<MediaTemplate EmbedCab="yes"/>

    <Icon Id="icon.ico" SourceFile="$(var.Mobee.Client.WPF.ProjectDir)\Icon.ico"/>

    <Property Id="ARPPRODUCTICON">icon.ico</Property>

    <UIRef Id="WixUI_Minimal"/>

    <Feature Id="ProductFeature" Title="Mobee" Level="1">
			<ComponentGroupRef Id="ProductComponents" />
      <ComponentGroupRef Id="PublishedComponents" />
      <ComponentGroupRef Id="PublishedLibsx64" />
      <ComponentGroupRef Id="PublishedLibsx86" />
    </Feature>

	</Product>

</Wix>
